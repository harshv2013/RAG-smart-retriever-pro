# ==================== Azure OpenAI Configuration ====================
# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://****************.openai.azure.com/
AZURE_OPENAI_API_KEY=********************************************************

# Azure Chat Deployment
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4.1

# Embedding Deployment
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=azureopenai-text-embedding-3-small
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# AZURE_OPENAI_EMBEDDING_API_VERSION=2024-02-01
AZURE_OPENAI_EMBEDDING_DIMENSION=1536


# ============= Database for local use case use (first if you created raguser )=========
# Note: My postgres running on port 5433, change if your is running on 5432 accordingly
# DATABASE_URL=postgresql+psycopg2://raguser:test123@localhost:5433/smartretriever
DATABASE_URL=postgresql+psycopg2://postgres:test123@localhost:5433/smartretriever


# # ==================== Database for Docker use case ====================
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@postgres:5432/smartretriever


# ==================== Redis for local ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=test@123  # Optional

# # ==================== Redis for docker====================
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_DB=0


# Cache TTL (seconds)
CACHE_TTL_EMBEDDING=86400  # 24 hours
CACHE_TTL_RETRIEVAL=3600   # 1 hour
CACHE_TTL_RESPONSE=1800    # 30 minutes

# ==================== FAISS Configuration ====================
FAISS_INDEX_PATH=data/faiss_index
FAISS_INDEX_TYPE=Flat  # Options: Flat, IVF, HNSW
FAISS_NLIST=100
FAISS_NPROBE=10

# ==================== File Storage ====================
STORAGE_PATH=data/storage
UPLOAD_PATH=data/uploads
PROCESSED_PATH=data/processed
MAX_FILE_SIZE_MB=100

# ==================== Chunking Settings ====================
CHUNK_SIZE=500
CHUNK_OVERLAP=50
CHUNKING_STRATEGY=semantic  # Options: semantic, fixed, recursive
MAX_TOKENS_PER_CHUNK=512

# ==================== RAG Settings ====================
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.3
ENABLE_RERANKING=false
RERANK_TOP_N=20

# ==================== Generation Settings ====================
TEMPERATURE=0.7
MAX_TOKENS=800

# ==================== Performance Settings ====================
BATCH_SIZE_EMBEDDING=10
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ==================== Monitoring ====================
ENABLE_METRICS=true
ENABLE_QUERY_LOGGING=true
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR

# ==================== Development ====================
DEBUG=false
TESTING=false

